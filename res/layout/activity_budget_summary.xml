<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:paddingBottom="@dimen/default_layout_spacing"
    android:paddingTop="@dimen/default_layout_spacing" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/default_layout_spacing"
        android:layout_marginRight="@dimen/default_layout_spacing"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        tools:context=".BudgetSummaryActivity" >

        <TextView
            android:id="@+id/budget_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold" />

        <com.example.budgetmanager.DrawBudgetGraph
            android:id="@+id/BudgetGraph"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="0.95" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/header_budget_total"
            android:textStyle="bold" />

        <TextView
            android:textIsSelectable="true"
            android:id="@+id/budget_total"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/header_budget_spent"
            android:textStyle="bold" />

        <TextView
            android:textIsSelectable="true"
            android:id="@+id/budget_spent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/header_budget_balance"
            android:textStyle="bold" />

        <TextView
            android:textIsSelectable="true"
            android:id="@+id/budget_balance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_component_height"
            android:layout_marginTop="@dimen/default_layout_spacing"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/clear_budget_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_button_secondary"
                android:text="@string/action_edit_budget"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/create_budget_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_button_primary"
                android:text="@string/action_delete_budget"
                android:textColor="@color/white" />
        </LinearLayout>

        <include
            android:layout_marginBottom="@dimen/default_layout_spacing"
	        android:layout_gravity="bottom"
	        layout="@layout/advertisement_view" />
    </LinearLayout>

</ScrollView>
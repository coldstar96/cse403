<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ubudgetbackground"
    tools:context=".EntryLogsActivity" >

    <LinearLayout
        android:id="@+id/entry_logs_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/entrylogsheader"
        android:orientation="vertical" >

    </LinearLayout>

    <TextView
        android:id="@+id/text_user_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:textColor="@color/dark_gray"
        android:layout_below="@+id/entry_logs_header"
        android:text="email@example.com" />

    <Spinner
        android:id="@+id/spinner_logs_sort"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/entry_logs_header"
        android:entries="@array/sort_types"
        android:prompt="@string/logs_sort_prompt" />

    <ListView
        android:id="@+id/entry_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/spinner_logs_sort"
        android:background="@drawable/shadowbackground"
        android:paddingBottom="55dp" >
    </ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/add_budget_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:onClick="onAddBudgetClicked"
            android:text="@string/action_add_budget" />

        <Button
            android:id="@+id/add_entry_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onAddEntryClicked"
            android:text="@string/action_add_entry" />
    </LinearLayout>

</RelativeLayout>
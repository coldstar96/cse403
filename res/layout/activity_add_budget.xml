<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/default_layout_side_margin"
        android:layout_marginRight="@dimen/default_layout_side_margin"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        tools:context=".AddBudgetActivity" >

        <EditText
            android:id="@+id/budget_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_component_height"
            android:hint="@string/prompt_budget_name"
            android:maxLines="1"
            android:singleLine="true" >
        </EditText>

        <EditText
            android:id="@+id/budget_amount"
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_component_height"
            android:hint="@string/prompt_budget_amount"
            android:inputType="numberDecimal" />

        <TextView
            android:id="@+id/add_budget_start_date_label"
            style="@style/FieldHeader"
            android:text="@string/prompt_budget_start_date" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray" />

        <DatePicker
            android:id="@+id/budget_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:calendarViewShown="false" />

        <TextView
            android:id="@+id/textView1"
            style="@style/FieldHeader"
            android:text="@string/budget_duration" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray" />

        <Spinner
            android:id="@+id/budget_duration"
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_component_height" />

        <CheckBox
            android:id="@+id/budget_recur"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/default_component_height"
            android:layout_gravity="left"
            android:text="@string/budget_recur"
            android:textColor="@color/dark_gray" />

        <LinearLayout
            style="?android:attr/buttonBarStyle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_component_height"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/clear_budget_button"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/default_button_margin"
                android:layout_marginTop="@dimen/default_button_margin"
                android:layout_weight="2"
                android:text="@string/action_clear_budget" />

            <Button
                android:id="@+id/create_budget_button"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/default_button_margin"
                android:layout_marginTop="@dimen/default_button_margin"
                android:layout_weight="1"
                android:text="@string/action_create_budget" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="LoginFormContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
    </style>

    <!-- Style for field headers in forms -->
    <style name="FieldHeader">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/default_component_height</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Style for a divider included with field headers -->
    <style name="FieldHeaderDivider">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">@android:color/darker_gray</item>
    </style>

    <!-- Style for edittexts -->
    <style name="CustomEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/default_component_height</item>
        <item name="android:background">@drawable/rounded_edittext</item>
        <item name="android:padding">@dimen/default_edittext_padding</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

</resources>